<div class="comments">
  {{#each this}}
    <div class="card">
        <div class="card-body">
            <div class="text">
                {{comment_text}}
            </div>
            <div class="meta">
                -{{user.username}}, {{format_date created_at}}
            </div>
        </div>
    </div>
  {{/each}}
</div>


