<div class="card">
    <div class="card-header bg-dark">
        <h3>Sign Up</h3>
    </div>
    <div class="card-body">
        <form id="signup-form">
            <div class="form-group">
                <label for="username-signup">Username</label>
                <input id="username-signup" type="text" autofocus="true" class="form-control"
                    placeholder="Enter Username" />
            </div>
            <div class="form-group">
                <label for="password-signup">Password</label>
                <input id="password-signup" type="password" class="form-control" placeholder="Password" />
            </div>

            <button type="submit" class="btn text-light bg-secondary">Signup!</button>
        </form>
        <a class="badge badge-primary" href="/login">Log in instead</a>

    </div>

    <script src="/js/signup.js"></script>